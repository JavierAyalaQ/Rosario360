---
interface Props {
    icon: string;
    src: string;
    alt: string;
    classList?: string;
    imageClass?: string;
    titleTag?: string;
    href?: string | null;
}
const { src, alt, classList, icon, imageClass, titleTag, href } = Astro.props;
---
<a href={href} class={`group relative aspect-video rounded-md cursor-crosshair overflow-hidden transition-all duration-500 w-full h-full ${classList}`} tabindex="0" title={titleTag} target="_blank" rel="noopener noreferrer">
    <i class={`fa-solid ${icon} text-4xl text-center m-auto text-white absolute opacity-0 top-[50%] left-[50%] transform translate-y-[-50%] translate-x-[-50%] transition-all duration-500 z-[5] group-hover:opacity-100 group-focus:opacity-100`}></i>
    <img src={src} alt={alt} loading="lazy" class={`transition-all object-cover duration-500 w-full h-full group-hover:brightness-50 group-focus:brightness-50 ${imageClass}`}>
</a>