---
interface Props {
    title: string;
}
const { title } = Astro.props;

---

<div class="flex flex-col items-center justify-start">
    <h5 class="mb-2 text-base font-bold text-gray-800 dark:text-gray-200">
        {title}
    </h5>
    <div class="flex flex-col items-start justify-center text-2xl">
        <slot />
    </div>
</div>