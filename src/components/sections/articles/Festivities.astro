---
import Festivty from "../../cards/Festivty.astro"
import SectionContainer from "../../wrappers/SectionContainer.astro"
import TitleH2 from "../TitleH2.astro"

const FESTIVITIES = [
    {
        name: "Festival de la Cultura",
        date: "24 de septiembre de 2024",
        description: "Festival de la Cultura de la Universidad de Rosario",
    },
    {
        name: "Festival de la Ciencia",
        date: "03 de octubre de 2024",
        description: "Festival de la Ciencia de la Universidad de Rosario",
    },
]
---


<SectionContainer>
    <header>
        <TitleH2 title="Ferias y eventos" />
    </header>
    <article>
        <ol class="border-s-2 border-primary dark:border-primary-500">
            <!--First item-->
            {FESTIVITIES.map(({ name, description, date }) => (
                <Festivty title={name} description={description} date={date} />
            ))}
        </ol>
    </article>
</SectionContainer>
