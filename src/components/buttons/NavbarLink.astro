---
interface Props {
    href?: string;
    body?: string;
}
const { href, body } = Astro.props;
---

<a href={`${href}`}
    class="block px-3 py-2 transition-colors duration-200 rounded 
    text-gray-700 hover:bg-green-50 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white
    md-text-gray-700  md:hover:bg-transparent md:dark:hover:bg-transparent md:dark:hover:text-green-300 md:bg-transparent md:hover:text-green-700 md:border-0 md:p-0 nav-link"
    data-astro-prefetch=""
>
    {body}
</a>