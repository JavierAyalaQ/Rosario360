---
interface Props {
    href: string;
    body: string;
    color?: string;
    hoverColor?: string;
    classList?: string;
}
const { href, body, color = "bg-green-500", hoverColor = "hover:bg-green-600", classList = null } = Astro.props;
---


<a href={href} class=`${color} ${hoverColor} text-white py-2 px-4 rounded-md shadow-md transition-colors`>{body}</a>