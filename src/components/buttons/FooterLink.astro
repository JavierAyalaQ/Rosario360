---
interface Props {
    href: string;
    icon: string;
    classList?: string;
}
const { href, icon, classList } = Astro.props;
---

<a href={href} target="_blank" class={`transition-colors duration-200 hover:text-gray-800 dark:hover:text-gray-200 ${classList}`}>
    <i class={`fa-solid fab ${icon}`}></i>
</a>