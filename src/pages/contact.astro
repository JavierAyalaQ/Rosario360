---

import Layout from "@layouts/Layout.astro";
import Form from "@components/forms/Form.astro";

import RecorridoImagenes from "@components/sections/RecorridoImagenes.tsx";



import fs from 'fs';
import path from 'path';

// Ruta de los frames
const framesDir = path.resolve('./public/img/recorridos/prueba');

// Obtener los nombres de los archivos
const frameFiles = fs.readdirSync(framesDir).filter((file: string) => file.endsWith('.png'));

// Crear rutas relativas
const frames = frameFiles.map((file: string) => `./public/img/recorridos/prueba/${file}`);
